    <body>


      <div class="container-fluid">

       <!-- Nav tabs -->
       <ul class="nav nav-pills nav-justified">
        <li class="active"><a href="#chats" data-toggle="tab">Chats <span class="fui-chat"></span></a></li>
        <li><a href="#friends" data-toggle="tab">Friends <span class="fui-user"></span></a></li>
        <li><a href="#settings" data-toggle="tab">Settings <span class="fui-gear"></span></a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="chats">
          <p> hello world</p>
        </div>
        
        <div class="tab-pane" id="friends">
          <p> hello friends</p>
        </div>
        
        <div class="tab-pane" id="settings">

          <form class="form-horizontal">
            <fieldset>

              <!-- Form Name -->
              <legend>Form Name</legend>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="name">Name:</label>  
                <div class="col-md-6">
                  <input id="name" name="name" type="text" placeholder="" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Password input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="password">Password</label>
                <div class="col-md-6">
                  <input id="password" name="password" type="password" placeholder="" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Select Basic -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="sendlang">Send Language</label>
                <div class="col-md-6">
                  <select id="sendlang" name="sendlang" class="form-control">
                    <option value="1">English</option>
                    <option value="2">Spanish</option>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-md-4 control-label" for="recievelang">Recieve Language</label>
                <div class="col-md-6">
                  <select id="recievelang" name="recievelang" class="form-control">
                    <option value="1">English</option>
                    <option value="2">Spanish</option>
                  </select>
                </div>
              </div>

              <!-- Button -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="save"></label>
                <div class="col-md-4">
                  <button id="save" name="save" class="btn btn-inverse">Save Changes</button>
                </div>
              </div>

            </fieldset>
          </form>

        </div>

        <a href="#fakelink" class="btn btn-block btn-lg btn-primary" data-toggle="modal" data-target="#new-msg">New Message <span class="fui-mail"></span>
        </a>

        <div class="modal fade bs-modal-sm" id="new-msg">
          <div class="modal-dialog">
            <div class="modal-content">

              <div class="modal-body">
                <form class="form-horizontal">
                  <fieldset>

                    <!-- Form Name -->

                    <!-- Text input-->
                    <div class="form-group">
                      <label class="col-md-4 control-label" for="recipient">Recipient:</label>  
                      <div class="col-md-6">
                        <input id="recipient" name="recipient" type="text" placeholder="" class="form-control input-md" required="">

                      </div>
                    </div>

                    <!-- Textarea -->
                    <div class="form-group">
                      <label class="col-md-4 control-label" for="message">Message:</label>
                      <div class="col-md-4">                     
                        <textarea class="form-control" id="message" name="message"></textarea>
                      </div>
                    </div>
                    <div class="centered">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Send message</button>
                    </div>
                  </fieldset>
                </form>


              </div>

            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->



        <!-- Load JS here for greater good =============================-->
        <script src="flat-ui/js/jquery-1.8.3.min.js"></script>
